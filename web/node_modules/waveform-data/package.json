  ],
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/bbc/waveform-data.js/issues"
  },
  "browserslist": [
    "last 2 versions",
    "> 0.2%",
    "IE 10"
  ],
  "devDependencies": {
    "@babel/preset-env": "~7.24.4",
    "@babel/register": "~7.23.7",
    "@pyrologic/rollup-plugin-web-worker-loader": "~1.6.1",
